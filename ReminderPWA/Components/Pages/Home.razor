    private async Task RetryConnection()
    {
        if (isRetrying) return;
        
        isRetrying = true;
        Console.WriteLine("🔄 Yritetään yhdistää uudelleen...");
        
        try
        {
            await LoadData();
        }
        finally
        {
            isRetrying = false;
        }
    }

     public void Dispose()
     {
         timer?.Dispose();
         autoReturnTimer?.Dispose();
         audioService?.StopBellAnimation();
